#!/bin/bash
set -e

function print_env(){
    FILE=/opt/adsblol/.env
    ENVS=(
        "ADSB_DONGLE_SERIAL"
        "READSB_NET_CONNECTOR"
        "MLATHUB_NET_CONNECTOR"
        "ADSBLOL_ADDITIONAL_NET_CONNECTOR"
        "ADSBLOL_ADDITIONAL_MLAT_CONFIG"
    )
    for env in "${ENVS[@]}"
    do
        echo "$env=$(grep $env $FILE|cut -d "=" -f 2)"
    done
}
# If --share, then upload to pastebin
print_env
